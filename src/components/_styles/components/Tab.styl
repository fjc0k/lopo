@require '../settings';

.tab {
  flex-shrink: 0;
  reset: box-model;
  display: inline-flex;
  align-items: center;
  justify-content: center;
  padding: 0 $h-spacing-lg;
  border-bottom: 2px solid transparent;
  width: auto;
  color: $color-text-caption;
  font-size: $tabs-font-size;
}

.active {
  color: $color-primary;
  border-bottom-color: $color-primary;
}
