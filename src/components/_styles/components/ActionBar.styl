@require '../settings';

.holder {
  height: $action-bar-height;
}

.bar {
  reset: base;
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  display: flex;
  align-items: center;
  height: $action-bar-height;
  background: white;
  z-index: 1;
  font-size: $font-size-caption;
  border-top: 1PX solid $color-line-light;
  &.borderless {
    border-top: none;
  }
}
