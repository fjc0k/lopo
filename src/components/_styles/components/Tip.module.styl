@require '../settings';

.tip {
  :global {
    .l-popover-message {
      color: $fill-base;
      padding: $v-spacing-xs $h-spacing-sm;
      background-color: rgba(black, 50%);
    }
    .l-popover-arrow {
      background-color: transparent;
      background-image: linear-gradient(
        45deg,
        transparent 50%,
        rgba(black, 50%) 50%
      );
    }
  }
}
